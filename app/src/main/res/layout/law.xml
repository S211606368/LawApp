<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LawActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTopBackground"
            android:stretchColumns="1">

            <TableRow android:background="@color/colorTopBackground">

                <ImageView
                    android:id="@+id/go_back"
                    android:layout_width="@dimen/qb_px_40"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/qb_px_40"
                    android:layout_gravity="center"
                    android:text="法律法规"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/qb_px_30" />

                <TextView
                    android:id="@+id/law_select"
                    android:layout_width="@dimen/qb_px_40"
                    android:layout_height="@dimen/qb_px_40"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/qb_px_10"
                    android:background="@drawable/setting"
                    android:gravity="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/qb_px_30" />
            </TableRow>
        </TableLayout>

        <ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/qb_px_10"
                android:layout_marginStart="@dimen/qb_px_10"
                android:layout_marginEnd="@dimen/qb_px_10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_40"
                    android:layout_marginTop="@dimen/qb_px_10"
                    android:layout_marginStart="@dimen/qb_px_10"
                    android:layout_marginEnd="@dimen/qb_px_10"
                    android:background="@drawable/index_backguound">

                    <ImageView
                        android:layout_width="@dimen/qb_px_30"
                        android:layout_height="@dimen/qb_px_30"
                        android:layout_marginStart="@dimen/qb_px_10"
                        android:layout_gravity="center"
                        android:background="@drawable/select"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint="搜索"
                        android:textSize="@dimen/qb_px_20"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_40"
                    android:layout_marginTop="@dimen/qb_px_5"
                    android:layout_marginBottom="@dimen/qb_px_10"
                    android:layout_marginStart="@dimen/qb_px_10"
                    android:layout_marginEnd="@dimen/qb_px_10">

                    <TextView
                        android:layout_width="@dimen/qb_px_150"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/qb_px_10"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/select_background"
                        android:text="法律搜索"
                        android:textSize="@dimen/qb_px_20"/>
                    <TextView
                        android:layout_width="@dimen/qb_px_150"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/qb_px_15"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/select_background"
                        android:text="全文搜索"
                        android:textSize="@dimen/qb_px_20" />
                </LinearLayout>

                <TableLayout
                    android:id="@+id/table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:stretchColumns="*"
                    android:shrinkColumns="*">

                </TableLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/qb_px_20" />
            </LinearLayout>


        </ScrollView>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>